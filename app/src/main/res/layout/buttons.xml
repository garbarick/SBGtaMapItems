<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/buttons">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/original_size"
        android:id="@+id/original_size"
        android:tooltipText="@string/original_size"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/fit"
        android:id="@+id/fit"
        android:tooltipText="@string/fit"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/zoom_in"
        android:id="@+id/zoom_in"
        android:tooltipText="@string/zoom_in"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/zoom_out"
        android:id="@+id/zoom_out"
        android:tooltipText="@string/zoom_out"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/check_selector"
        android:id="@+id/check"
        android:tooltipText="@string/check"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/erase_selector"
        android:id="@+id/erase"
        android:tooltipText="@string/erase"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/clean_up"
        android:id="@+id/clean_up"
        android:tooltipText="@string/clean_up"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/export_checks"
        android:id="@+id/export_checks"
        android:tooltipText="@string/export_checks"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/import_checks"
        android:id="@+id/import_checks"
        android:tooltipText="@string/import_checks"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerInside"
        android:src="@drawable/info"
        android:id="@+id/info"
        android:tooltipText="@string/info"/>

</GridLayout>

